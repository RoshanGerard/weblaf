<skin>

    <!-- com.alee.laf.filechooser.WebFileChooser -->

    <!-- File chooser -->
    <style type="filechooser">
        <painter class="WebFileChooserPainter" />
    </style>

    <!-- Main content panel -->
    <style type="panel" id="filechooser" padding="2,5,2,5">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="WebPanelPainter">
            <webColoredBackground>false</webColoredBackground>
        </painter>

        <!-- Toolbar -->
        <style type="toolbar" id="decorated-bar" extends="attached">
            <component>
                <floatable>false</floatable>
            </component>
            <painter class="WebToolBarPainter">
                <spacing>0</spacing>
            </painter>
        </style>
        <style type="toolbar" id="undecorated-bar" extends="decorated-bar">
            <painter class="WebToolBarPainter">
                <undecorated>true</undecorated>
            </painter>
        </style>

        <!-- Toolbar button -->
        <style type="button" id="tool" extends="icon">
            <painter class="WebButtonPainter">
                <rolloverDecoratedOnly>true</rolloverDecoratedOnly>
            </painter>
        </style>

        <!-- History popup list scrollpane -->
        <style type="scrollpane" id="history" extends="popup" />

        <!-- Central panel -->
        <style type="panel" id="center" padding="4,4,4,4" />

        <!-- South panel -->
        <style type="panel" id="south" padding="0,4,4,4" />

        <!-- Selected files title label -->
        <style type="label" id="selected" extends="shade" padding="0,4,0,0" />

        <!-- Buttons -->
        <style type="button" id="control-button" />
        <style type="button" id="accept" extends="control-button" />
        <style type="button" id="cancel" extends="control-button" />

        <!-- Files removal confirmation list panel -->
        <style type="panel" id="removal-list" padding="4,4,4,4">
            <component>
                <background>white</background>
            </component>
        </style>

        <!-- Path field -->
        <style type="textfield" id="path" extends="undecorated" />

    </style>

</skin>