<skin>

    <!-- com.alee.laf.desktoppane.WebInternalFrame -->

    <!-- Internal frame -->
    <style type="internalframe">
        <component>
            <opaque>false</opaque>
            <background>90,90,90,220</background>
        </component>
        <painter class="WebInternalFramePainter">
            <round>4</round>
            <webColoredBackground>false</webColoredBackground>
        </painter>

        <!-- Title label -->
        <style type="label" id="title" extends="shade" />

        <!-- Decoration control buttons -->
        <style type="button" id="decoration-button" padding="4,6,4,6">
            <painter class="WebButtonPainter">
                <round>4</round>
                <shadeWidth>0</shadeWidth>
                <innerShadeWidth>2</innerShadeWidth>
                <rolloverDarkBorderOnly>false</rolloverDarkBorderOnly>
            </painter>
        </style>
        <style type="button" id="minimize" extends="decoration-button" />
        <style type="button" id="maximize" extends="decoration-button" />
        <style type="button" id="close" extends="decoration-button" />

    </style>

    <!-- Desktop icon -->
    <style type="desktopicon">
        <component>
            <opaque>false</opaque>
        </component>
        <painter class="WebDesktopIconPainter" />
    </style>

</skin>