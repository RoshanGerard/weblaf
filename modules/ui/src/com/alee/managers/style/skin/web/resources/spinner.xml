<skin>

    <!-- com.alee.laf.spinner.WebSpinner -->

    <!-- Spinner -->
    <style type="spinner">
        <component>
            <opaque>false</opaque>
            <background>255,255,255</background>
        </component>
        <painter class="WebSpinnerPainter">
            <round>4</round>
            <shadeWidth>2</shadeWidth>
        </painter>

        <!-- Buttons -->
        <style type="button" id="button">
            <painter class="WebButtonPainter">
                <round>2</round>
                <shadeWidth>0</shadeWidth>
                <innerShadeWidth>0</innerShadeWidth>
                <leftRightSpacing>3</leftRightSpacing>
            </painter>
        </style>
        <style type="button" id="next" extends="button">
            <painter class="WebButtonPainter">
                <paintTop>false</paintTop>
                <paintRight>false</paintRight>
                <paintBottom>false</paintBottom>
                <paintBottomLine>true</paintBottomLine>
            </painter>
        </style>
        <style type="button" id="previous" extends="button">
            <painter class="WebButtonPainter">
                <paintTop>false</paintTop>
                <paintRight>false</paintRight>
                <paintBottom>false</paintBottom>
            </painter>
        </style>

        <!-- Editor field -->
        <style type="formattedtextfield" id="editor" extends="undecorated" padding="0,2,0,2" />

    </style>

</skin>