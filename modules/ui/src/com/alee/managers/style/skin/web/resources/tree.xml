<skin>

    <!-- com.alee.laf.tree.WebTree -->

    <!-- Tree -->
    <style type="tree" padding="4">
        <painter class="WebTreePainter">
            <selectionRound>2</selectionRound>
            <selectionShadeWidth>2</selectionShadeWidth>
            <selectorRound>2</selectorRound>
            <dropCellShadeWidth>8</dropCellShadeWidth>
            <linesColor>gray</linesColor>
            <selectorColor>0,0,255,25</selectorColor>
            <selectorBorderColor>gray</selectorBorderColor>
            <selectionBorderColor>gray</selectionBorderColor>
            <selectionBackgroundColor>223,223,223</selectionBackgroundColor>
            <paintLines>true</paintLines>
            <dashedLines>true</dashedLines>
            <webColoredSelection>true</webColoredSelection>
            <selectorEnabled>true</selectorEnabled>

            <!-- Tree mouseover painter -->
            <hoverPainter class="WebTreeSelectionPainter">
                <decorations>
                    <decoration transparency="0.5" round="0">
                        <LineBorder color="170,170,170" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                </decorations>
            </hoverPainter>

            <!-- Tree selection painter -->
            <selectionPainter class="WebTreeSelectionPainter">
                <decorations>
                    <decoration round="0">
                        <BasicShade type="inner" width="5" />
                        <ColorBackground color="223,223,223" />
                    </decoration>
                    <decoration states="disabled" transparency="0.5" />
                </decorations>
            </selectionPainter>

        </painter>

        <!-- Default tree cell renderer label -->
        <style type="label" id="renderer" padding="4,4,4,6" />

        <!-- Default tree cell renderer label -->
        <style type="styledlabel" id="renderer" padding="4,4,4,6" />

        <!-- Default tree cell editor -->
        <style type="textfield" id="editor">
            <painter class="WebTextFieldPainter">
                <hideInputPromptOnFocus>false</hideInputPromptOnFocus>
            </painter>
        </style>

    </style>

    <!-- Transparent tree -->
    <style type="tree" id="transparent">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

</skin>